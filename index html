<script>
const owners = { Sun:[4], Moon:[3], Mars:[0,7], Mercury:[2,5], Jupiter:[8,11], Venus:[1,6], Saturn:[9,10] };

async function calculateNadi() {
    try {
        const dob = document.getElementById('dob').value;
        const tob = document.getElementById('tob').value;
        const response = await fetch(`/api/calc?dob=${dob}&tob=${tob}`);
        const data = await response.json();
        
        if (data.error) throw new Error(data.error);
        
        const pos = data.positions;

        // Clear previous chart
        for(let i=0; i<12; i++) document.getElementById(`h${i}`).innerHTML = `<div class="house-id">${i+1}</div>`;

        const pAbbr = {Sun:'Su', Moon:'Mo', Mars:'Ma', Mercury:'Me', Jupiter:'Ju', Venus:'Ve', Saturn:'Sa', Rahu:'Ra', Ketu:'Ke', Ascendant:'As'};
        
        Object.entries(pos).forEach(([p, deg]) => {
            const sign = Math.floor(deg / 30);
            if(document.getElementById(`h${sign}`)) {
                document.getElementById(`h${sign}`).innerHTML += `<span class="p-tag">${pAbbr[p] || p} ${Math.floor(deg%30)}¬∞</span>`;
            }
        });

        runNadiLogic(pos);
    } catch(e) { 
        alert("·Äê·ÄΩ·ÄÄ·Ä∫·ÄÅ·Äª·ÄÄ·Ä∫·Äô·Äæ·ÄØ·Ä°·Äô·Äæ·Ä¨·Ä∏·Äõ·Äæ·Ä≠·Äî·Ä±·Äï·Ä´·Äû·Ää·Ä∫- " + e.message); 
    }
}

function runNadiLogic(pos) {
    let resultHTML = "";
    let alerts = [];
    let chart = {};

    Object.entries(pos).forEach(([p, deg]) => {
        chart[p] = { house: Math.floor(deg / 30), degree: deg % 30 };
    });

    const isAspect = (p1, p2) => {
        if (!chart[p1] || !chart[p2]) return false;
        let diff = (chart[p2].house - chart[p1].house + 12) % 12;
        return [0, 4, 8, 2, 6, 10].includes(diff);
    };

    const isInterchange = (p1, p2) => {
        if (!chart[p1] || !chart[p2]) return false;
        return owners[p1]?.includes(chart[p2].house) && owners[p2]?.includes(chart[p1].house);
    };

    const dignities = {
        Sun: { exalt: 0, debilit: 6 }, Moon: { exalt: 1, debilit: 7 },
        Mars: { exalt: 9, debilit: 3 }, Mercury: { exalt: 5, debilit: 11 },
        Jupiter: { exalt: 3, debilit: 9 }, Venus: { exalt: 11, debilit: 5 },
        Saturn: { exalt: 6, debilit: 0 }
    };

    const effects = [
        { cat: "family", check: () => isAspect('Moon', 'Rahu'), text: "·Äê·Äî·ÄÑ·Ä∫·Äπ·Äú·Ä¨+·Äõ·Ä¨·Äü·ÄØ·ÄÜ·ÄÄ·Ä∫·Äû·ÄΩ·Äö·Ä∫·ÄÅ·Äª·ÄÄ·Ä∫·ÄÄ·Äº·Ä±·Ä¨·ÄÑ·Ä∑·Ä∫ ·Äá·Ä¨·Äê·Ä¨·Äõ·Äæ·ÄÑ·Ä∫·ÄÄ·Ä≠·ÄØ ·Äô·ÄΩ·Ä±·Ä∏·ÄÖ·Äê·ÄΩ·ÄÑ·Ä∫ ·Äô·Ä≠·ÄÅ·ÄÑ·Ä∫·Äñ·Äº·ÄÖ·Ä∫·Äû·Ä∞·Äô·Äæ·Ä¨ ·Äë·Ä≠·Äê·Ä∫·Äú·Äî·Ä∑·Ä∫·Äñ·ÄΩ·Äö·Ä∫·Äõ·Ä¨·Ä°·Äî·Äπ·Äê·Äõ·Ä¨·Äö·Ä∫ ·Äû·Ä≠·ÄØ·Ä∑·Äô·Äü·ÄØ·Äê·Ä∫ ·Äñ·Äª·Ä¨·Ä∏·Äî·Ä¨·Äê·Äê·Ä∫·Äû·Ää·Ä∫·Åã" },
        { cat: "career", check: () => isAspect('Saturn', 'Ketu'), text: "·Ä°·Äú·ÄØ·Äï·Ä∫·Ä°·ÄÄ·Ä≠·ÄØ·ÄÑ·Ä∫·Äê·ÄΩ·ÄÑ·Ä∫ ·Ä°·Äê·Ä¨·Ä∏·Ä°·ÄÜ·ÄÆ·Ä∏·Äô·Äª·Ä¨·Ä∏ ·Äû·Ä≠·ÄØ·Ä∑·Äô·Äü·ÄØ·Äê·Ä∫ ·Äõ·ÄØ·Äê·Ä∫·Äê·Äõ·ÄÄ·Ä∫ ·Äõ·Äï·Ä∫·Äê·Äî·Ä∑·Ä∫·Äô·Äæ·ÄØ·Äô·Äª·Ä¨·Ä∏ ·ÄÄ·Äº·ÄØ·Ä∂·Äõ·Äê·Äê·Ä∫·Äû·Ää·Ä∫·Åã" },
        { cat: "fortune", check: () => isAspect('Jupiter', 'Venus') && isAspect('Jupiter', 'Mercury'), text: "<b>·Äì·Äî·Äû·Ä≠·Äí·Äπ·Äì·Ä≠·Äö·Ä±·Ä¨·ÄÇ:</b> ·ÄÑ·ÄΩ·Ä±·ÄÄ·Äº·Ä±·Ä∏·ÄÄ·Ä∂ ·Ä°·Äú·ÄΩ·Äî·Ä∫·ÄÄ·Ä±·Ä¨·ÄÑ·Ä∫·Ä∏·Äô·ÄΩ·Äî·Ä∫·Äï·Äº·ÄÆ·Ä∏ ·Äò·Äù·Äê·ÄΩ·ÄÑ·Ä∫ ·ÄÅ·Äª·Äô·Ä∫·Ä∏·Äû·Ä¨·ÄÄ·Äº·ÄΩ·Äö·Ä∫·Äù·Äô·Ää·Ä∑·Ä∫·Äû·Ä∞ ·Äñ·Äº·ÄÖ·Ä∫·Äû·Ää·Ä∫·Åã" },
        { cat: "marriage", check: () => isAspect('Venus', 'Ketu'), text: "·Ä°·Ä≠·Äô·Ä∫·Äë·Ä±·Ä¨·ÄÑ·Ä∫·Äõ·Ä±·Ä∏·Äê·ÄΩ·ÄÑ·Ä∫ ·Äù·Ä≠·Ää·Ä¨·Äâ·Ä∫·Äõ·Ä±·Ä∏·Äõ·Ä¨·Äî·Äæ·ÄÑ·Ä∑·Ä∫ ·Äú·ÄΩ·Äê·Ä∫·Äô·Äº·Ä±·Ä¨·ÄÄ·Ä∫·Äô·Äæ·ÄØ·Äú·Äô·Ä∫·Ä∏·ÄÖ·Äâ·Ä∫·ÄÄ·Ä≠·ÄØ ·ÄÖ·Ä≠·Äê·Ä∫·Äù·ÄÑ·Ä∫·ÄÖ·Ä¨·Ä∏·Äû·Ä∞ ·Äñ·Äº·ÄÖ·Ä∫·Äê·Äê·Ä∫·Äû·Ää·Ä∫·Åã" },
        { cat: "spiritual", check: () => isAspect('Jupiter', 'Saturn') && isAspect('Jupiter', 'Ketu'), text: "·Äò·Äù·Åè ·Äî·Ä±·Ä¨·ÄÄ·Ä∫·ÄÜ·ÄØ·Ä∂·Ä∏·Ä°·ÄÅ·Äª·Ä≠·Äî·Ä∫·Äê·ÄΩ·ÄÑ·Ä∫ ·Äò·Ä¨·Äû·Ä¨·Äõ·Ä±·Ä∏·Åä ·Äù·Ä≠·Ää·Ä¨·Äâ·Ä∫·Äõ·Ä±·Ä∏·Äõ·Ä¨·Äô·Äª·Ä¨·Ä∏·Äñ·Äº·ÄÑ·Ä∑·Ä∫ ·Ä°·Ä±·Ä∏·ÄÅ·Äª·Äô·Ä∫·Ä∏·ÄÖ·ÄΩ·Ä¨ ·ÄÄ·ÄØ·Äî·Ä∫·ÄÜ·ÄØ·Ä∂·Ä∏·Äõ·Äô·Ää·Ä∫·Åã" },
        { cat: "career", check: () => isInterchange('Mars', 'Mercury'), text: "<b>·Ä°·ÄÑ·Ä∫·Äπ·ÄÇ·Ä´+·Äó·ÄØ·Äí·Äπ·Äì·Äü·Ä∞·Ä∏ ·Ä°·Ä≠·Äô·Ä∫·Äñ·Äú·Äæ·Äö·Ä∫·ÄÅ·Äº·ÄÑ·Ä∫·Ä∏:</b> ·Äá·Ä¨·Äê·Ä¨·Äõ·Äæ·ÄÑ·Ä∫·Äû·Ää·Ä∫ ·ÄÖ·ÄÄ·Ä¨·Ä∏·Äï·Äº·Ä±·Ä¨·ÄÜ·Ä≠·ÄØ·Äõ·Ä¨·Äê·ÄΩ·ÄÑ·Ä∫ ·Äë·ÄÄ·Ä∫·Äô·Äº·ÄÄ·Ä∫·Äï·Äº·ÄÆ·Ä∏ ·ÄÑ·Äº·ÄÑ·Ä∫·Ä∏·ÄÅ·ÄØ·Ä∂·ÄÜ·ÄΩ·Ä±·Ä∏·Äî·ÄΩ·Ä±·Ä∏·Äô·Äæ·ÄØ·Äê·ÄΩ·ÄÑ·Ä∫ ·ÄÄ·Äª·ÄΩ·Äô·Ä∫·Ä∏·ÄÄ·Äª·ÄÑ·Ä∫·Äû·Ä∞·Äñ·Äº·ÄÖ·Ä∫·Äô·Ää·Ä∫·Åã" }
    ];

    // Check Dignities
    Object.keys(dignities).forEach(p => {
        if (chart[p]) {
            if (chart[p].house === dignities[p].exalt) alerts.push(`üåü ${p} ·Ä°·Äë·Ä∞·Ä∏·Ä°·Ä¨·Ä∏·ÄÄ·Ä±·Ä¨·ÄÑ·Ä∫·Ä∏ (Exalt) ·Äî·Ä±·Äû·Ää·Ä∫·Åã`);
            if (chart[p].house === dignities[p].debilit) alerts.push(`‚ö†Ô∏è ${p} ·Ä°·Ä¨·Ä∏·Äî·Ää·Ä∫·Ä∏ (Debilitated) ·Äî·Ä±·Äû·Ää·Ä∫·Åã`);
        }
    });

    let catNames = { fortune: "·ÄÄ·Ä∂·ÄÄ·Äº·Äô·Äπ·Äô·Ä¨·Äî·Äæ·ÄÑ·Ä∑·Ä∫ ·Ä°·Ä±·Ä¨·ÄÑ·Ä∫·Äô·Äº·ÄÑ·Ä∫·Äô·Äæ·ÄØ", career: "·Ä°·Äú·ÄØ·Äï·Ä∫·Ä°·ÄÄ·Ä≠·ÄØ·ÄÑ·Ä∫", marriage: "·Ä°·Ä≠·Äô·Ä∫·Äë·Ä±·Ä¨·ÄÑ·Ä∫·Äõ·Ä±·Ä∏", family: "·Äô·Ä≠·Äû·Ä¨·Ä∏·ÄÖ·ÄØ", spiritual: "·Äù·Ä≠·Ää·Ä¨·Äâ·Ä∫·Äõ·Ä±·Ä∏·Äõ·Ä¨", health: "·ÄÄ·Äª·Äî·Ä∫·Ä∏·Äô·Ä¨·Äõ·Ä±·Ä∏" };

    Object.keys(catNames).forEach(c => {
        let filtered = effects.filter(e => e.cat === c && e.check());
        if(filtered.length > 0) {
            resultHTML += `<div class="cat-title">${catNames[c]}</div>`;
            filtered.forEach(f => { resultHTML += `<div class="res-card">${f.text}</div>`; });
        }
    });

    document.getElementById('result-area').innerHTML = (alerts.map(a => `<div class="alert-box">${a}</div>`).join("")) + resultHTML;
}
